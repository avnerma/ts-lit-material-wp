{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "lib": ["esnext", "dom"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": true,
    },
    "exclude": [
        "node_modules"
    ]
}